{
	"compilerOptions": {
		"lib": ["es2022"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"rootDir": ".",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		},
		"outDir": "dist",
		"moduleDetection": "force",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
	},	
}